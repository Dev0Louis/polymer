{
  "schemaVersion": 1,
  "id": "polymer",
  "version": "${version}",
  "name": "Polymer",
  "description": "Library for creating better server side content!",
  "authors": [
    "Patbox"
  ],
  "contact": {
    "homepage": "https://pb4.eu",
    "sources": "https://github.com/Patbox/polymer",
    "issues": "https://github.com/Patbox/polymer/issues",
    "modmenu.discord" : "https://pb4.eu/discord"
  },

  "license": "LGPLv3",
  "icon": "assets/icon.png",
  "environment": "*",
  "accessWidener": "polymer.accesswidener",
  "entrypoints": {
    "main": [
      "eu.pb4.polymer.impl.PolymerMod"
    ],
    "client": [
      "eu.pb4.polymer.impl.PolymerMod"
    ],
    "rei": [
      "eu.pb4.polymer.impl.compat.ReiCompatibility"
    ]
  },
  "mixins": [
    "polymer.mixins.json"
  ],

  "depends": {
    "minecraft": "1.17.x"
  },
  "custom": {
    "modmenu": {
      "badges": [ "library" ]
    },
    "waila:plugins": {
      "id": "polymer:main",
      "initializer": "eu.pb4.polymer.impl.compat.WthitCompatibility"
    }
  }
}
